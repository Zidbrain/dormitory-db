<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Database.Forms"
             xmlns:Database="clr-namespace:Database" x:Class="Database.Forms.EditControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" FontSize="18">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TabControl x:Name="TabControl" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.Row="0">
            <TabItem Content="" Header="Студенты"/>
        </TabControl>
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" AutomationProperties.HelpText="asdasd" Grid.Row="1" Margin="0,10,10,10" Content="{Binding Mode=OneWay, Source={StaticResource Exit}}" Height="45" Width="44" Click="Button_Click"/>
    </Grid>
</UserControl>
